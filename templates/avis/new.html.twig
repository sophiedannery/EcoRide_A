{% extends 'base.html.twig' %}
{% block title %}Laisser un avis
{% endblock %}
{% block body %}

	<section class="py-5">
		<div class="container">
			<p class="subtitle">Réservation n°
				{{ reservation.id }}</p>
			<h1 class="h2 mb-5">Laissez un avis à
				{{ chauffeurPseudo }}</h1>
			<div>
				<div class="row">
					<div class="col-lg-4">
						<h4>Le trajet</h4>
						<p class="text-muted text-sm">{{ reservation.trajet.adresseDepart }}
							→
							{{ reservation.trajet.adresseArrivee }}</p>
						<p class="text-muted text-sm">
							{{ reservation.trajet.dateDepart|date('d/m/Y H:i') }}</p>
					</div>
					<div class="col-lg-7 ms-auto">
						{{ form_start(avisForm) }}
						<div class="mb-3">
							{{ form_label(avisForm.note) }}
							{{ form_widget(avisForm.note, {'attr': {'class': 'form-control', 'min':1, 'max':5}}) }}
							{{ form_errors(avisForm.note) }}
						</div>
						<div class="mb-3">
							{{ form_label(avisForm.commentaire) }}
							{{ form_widget(avisForm.commentaire, {'attr': {'class': 'form-control'}}) }}
							{{ form_errors(avisForm.commentaire) }}
						</div>

						<div class="text-center m-5">
							<button type="submit" class="btn btn-primary">Envoyer mon avis</button>
							<a class="btn btn-outline-primary px-4 me-md-2" href="{{ path('app_account_reservations')}}">Retour</a>
						</div>
						{{ form_end(avisForm) }}</div>

				</div>


			</div>

		</div>
	</section>


{% endblock %}
