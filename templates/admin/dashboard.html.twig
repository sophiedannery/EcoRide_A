{% extends 'base.html.twig' %}

{% block title %}Tableau de bord Admin
{% endblock %}

{% block body %}
	<h1>Trajets du
		{{ labels[0]|date('d/m/Y') }}
		au
		{{ labels[6]|date('d/m/Y') }}</h1>


	<a href="{{ path('app_admin_dashboard', { week_start: preWeek}) }}" class="btn btn_outline-secondary">Semaine précédente</a>
	<a href="{{ path('app_admin_dashboard', { week_start: nextWeek}) }}" class="btn btn-outline-secondary">Semaine suivante</a>

	<canvas id="trajetsChart" width="800" height="400"></canvas>

	<a href="{{ path('app_admin')}}">retour</a>

{% endblock %}


{% block javascripts %}
	{{ parent() }}
	<script>

		const labelsRaw = {{ labels|json_encode|raw }};
const dataValuesRaw = {{ data|json_encode|raw }};

const labels = labelsRaw.map(dateStr => {
const d = new Date(dateStr);
const dd = String(d.getDate()).padStart(2, '0');
const mm = String(d.getMonth() + 1).padStart(2, '0');
return dd + '/' + mm;
});

const dataValues = dataValuesRaw;

const ctx = document.getElementById('trajetsChart').getContext('2d');

new Chart(ctx, {
type: 'bar',
data: {
labels: labels,
datasets: [
{
label: 'Nombre de covoiturages',
data: dataValues,
backgroundColor: 'rgba(75, 192, 192, 0.5)',
borderColor: 'rgba(75, 192, 192, 1)',
borderWidth: 1
}
]
},
options: {
scales: {
x: {
title: {
display: true,
text: 'Jour'
}
},
y: {
beginAtZero: true,
max: 10,
ticks: {
stepSize: 1
},
title: {
display: true,
text: 'Nombre de trajets'
}
}
}
}
});
	</script>
{% endblock %}
