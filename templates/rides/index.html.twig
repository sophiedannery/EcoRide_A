{% extends 'base.html.twig' %}

{% block title %}Covoiturages
{% endblock %}

{% block body %}


	<div class="container-fluid px-3">
		<div class="row min-vh-100">

			<div class="col-md-8 col-lg-6 col-xl-5 d-flex align-items-center">

				<div class="w-100 py-5 px-md-5 px-xxl-6 position-relative">

					<div class="mb-5">
						<h1>Trouver un covoiturage</h1>
					</div>

					<form
						method="GET" action="{{ path('app_search') }}">
						{# Départ #}
						<div class="form-floating mb-4">
							<input name="depart" type="text" class="form-control" id="depart" placeholder="Départ" required value="{{ app.request.query.get('depart') }}">
							<label for="depart" class="form-label">Départ</label>
						</div>

						{# Arrivée #}
						<div class="form-floating mb-4">
							<input name="arrivee" type="text" class="form-control" id="arrivee" placeholder="Arrivée" required value="{{ app.request.query.get('arrivee') }}">
							<label for="arrivee" class="form-label">Arrivée</label>
						</div>

						{# Date #}
						<div class="form-floating mb-4">
							<input name="date" type="date" class="form-control" id="date" placeholder="Date" required value="{{ app.request.query.get('date') }}">
							<label for="date" class="form-label">Date</label>
						</div>

						{# Bouton Rechercher #}
						<div class="d-grid gap-2 mb-4">
							<button class="btn btn-lg btn-primary" type="submit">
								<i class="bi bi-search"></i>
								Rechercher
							</button>
						</div>
					</form>

				</div>


			</div>

			<div class="col-md-4 col-lg-6 col-xl-7 d-none d-md-block">
