{% extends 'base.html.twig' %}
{% block title %}Ajouter un trajet — étape 3
{% endblock %}
{% block body %}
	<section class="py-5">
		<div class="container">

			<div class="col-12 col-md-8 col-lg-6 mx-auto mt-5">
				<p class="subtitle">AJOUTER UN TRAJET</p>
				<h1 class="h2 mb-5">Le prix
					<span class="text-muted float-end">Étape 3</span>
				</h1>

				<form method="post">
					<div class="mb-3">
						<label for="places_restantes">Nombre de places disponibles pour ce trajet</label>
						<input type="number" class="form-control" id="places_restantes" name="places_restantes" min="1" max="{{ vehicule.placesDisponibles }}" value="{{ places_restantes|default(vehicule.placesDisponibles) }}">
					</div>
					<div class="mb-3">
						<label class="mb-2">Prix par personne
							<br>
							(2 crédits seront prélevés par la plateforme)</label>
						<input type="number" name="prix" min="2" step="1" class="form-control" required value="{{ prix }}">
					</div>
					<div class="d-flex justify-content-between mt-4">
						<a href="{{ path('app_trajet_nouveau_vehicule') }}" class="btn btn-link text-muted">
							<i class="fa fa-chevron-left me-2"></i>Précédent
						</a>
						<button type="submit" class="btn btn-primary">Suivant</button>
					</div>
				</form>

			</div>

		</div>
	</section>
{% endblock %}
