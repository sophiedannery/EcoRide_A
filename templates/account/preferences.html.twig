{# templates/account/vehicule_new.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mes préférences
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h1>Mes préférences de covoiturage</h1>
	</div>

	{{ form_start(form) }}

	<fieldset class="mb-4">
		<legend>{{ form_label(form.smokingPreference) }}</legend>
		{{ form_widget(form.smokingPreference) }}
		{{ form_errors(form.smokingPreference) }}
	</fieldset>

	<fieldset class="mb-4">
		<legend>{{ form_label(form.animalPreference) }}</legend>
		{{ form_widget(form.animalPreference) }}
		{{ form_errors(form.animalPreference) }}
	</fieldset>

	<button class="btn btn-primary">Enregistrer</button>
	<a href="{{ path('app_account') }}" class="btn btn-secondary">Annuler</a>

	{{ form_end(form) }}


{% endblock %}
