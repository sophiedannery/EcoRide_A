{% extends 'base.html.twig' %}

{% block title %}Mes préférences
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h1>Mes préférences de covoiturage</h1>
	</div>

	{{ form_start(form) }}
	<div class="mb-4">
		{{ form_widget(form.preferences) }}
		{{ form_errors(form.preferences) }}
	</div>
	<button class="btn btn-primary">Enregistrer</button>
	<a href="{{ path('app_account') }}" class="btn btn-secondary">Annuler</a>
	{{ form_end(form) }}


{% endblock %}
