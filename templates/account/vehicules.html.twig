{# templates/account/trajet_new.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Mes véhicules
{% endblock %}

{% block body %}

	<section class="py-5">
		<div class="container">
			<h1 class="hero-heading mb-0">Vos véhicules</h1>
			<p class="text-muted mb-5">Ajouter ou supprimer un véhicule ici</p>
			<div>
				{% if vehicules is empty %}
					<p>Vos véhicule apparaitront ici.</p>
				{% else %}
					{% for v in vehicules %}
						<div class="text-block">
							<div class="row mb-3">
								<div class="col-sm-9">
									<h5>{{ v.marque }}
										{{ v.modele }}</h5>
								</div>
								<div class="col-sm-3 text-end"></div>
							</div>
							<p class="text-sm text-muted">
								<i class=""></i>
								<strong>Marque :</strong>

								{{ v.marque }}<br>
								<i class=""></i>
								<strong>Modèle :</strong>

								{{ v.modele }}<br>
								<i class=""></i>
								<strong>Couleur :</strong>
								{{ v.couleur }}<br>
								<i class=""></i>
								<strong>Energie :</strong>
								{{ v.energie }}<br>
								<i class=""></i>
								<strong>place{{ v.placesDisponibles > 1 ? 's' : '' }}
									disponible{{ v.placesDisponibles > 1 ? 's' : '' }}
									:</strong>
								{{ v.placesDisponibles }}
								<br>
								<i class=""></i>
								<strong>Immatriculation :</strong>
								{{ v.immatriculation }}
								<span class="mx-2">
									|
								</span>
								<i class=""></i>
								<strong>Date première immatriculation :</strong>
								{{ v.datePremiereImmatriculation|date('d/m/Y') }}
							</p>
							<hr>
						</div>

					{% endfor %}

				{% endif %}
			</div>

			<div class="text-center m-5">
				<a href="{{ path('app_account_vehicule_new')}}" class="btn btn-primary btn-lg px-4 me-md-2">Ajouter un véhicule</a>
				<a class="btn btn-outline-primary btn-lg px-4 me-md-2" href="{{ path('app_account')}}">Retour</a>
			</div>


		</div>

	</section>


{% endblock %}
