{% extends 'base.html.twig' %}

{% block title %}Mon Espace
{% endblock %}

{% block body %}


	{% set isPassengerOnly = app.user.statut == 'passager' %}


	<section class="py-5">
		<div class="container">
			<h1 class="hero-heading mb-0">Bonjour
				{{app.user.pseudo}}</h1>
			<p class="text-muted mt-3 mb-5">{{app.user.credits}}
				crédit{{ app.user.credits > 1 ? 's' : ''}}
			</p>

			<p class="text-muted mt-3 mb-5">Gérer votre profil ici.</p>
			<div class="row">

				<div class="col-6 col-md-4 mb-4">
					<div class="card h-100 border-0 shadow hover-animate">
						<div class="card-body">
							<div class="icon-rounded bg-secondary-light mb-3">
								<i class="fa-regular fa-address-card"></i>
							</div>
							<h5 class="card-title mb-3">
								<a class="text-decoration-none text-dark stretched-link" href="{{ path ('app_account_infos') }}">Mes infos</a>
							</h5>
							<p class="text-muted card-text text-sm">Modifier vos informations personnelles</p>
						</div>
					</div>
				</div>

				<div class="col-6 col-md-4 mb-4">
					<div class="card h-100 border-0 shadow hover-animate">
						<div class="card-body">
							<div class="icon-rounded bg-secondary-light mb-3">
								<i class="fa-solid fa-suitcase"></i>
							</div>
							<h5 class="card-title mb-3">
								<a class="text-decoration-none text-dark stretched-link" href="{{ path ('app_reservation_account') }}">Mes réservations</a>
							</h5>
							<p class="text-muted card-text text-sm">Visualiser vos réservations passées et à venir</p>
						</div>
					</div>
				</div>

				<div class="col-6 col-md-4 mb-4">
					<div class="card h-100 border-0 shadow hover-animate">
						<div class="card-body">
							<div class="icon-rounded bg-secondary-light mb-3">
								<i class="fa-solid fa-tag"></i>
							</div>
							<h5 class="card-title mb-3">
								<a class="text-decoration-none text-dark stretched-link" href="{{ path ('app_account_statut') }}">Mon statut</a>
							</h5>
							<p class="text-muted card-text text-sm">Modifier votre statut</p>
						</div>
					</div>
				</div>

				{% if isPassengerOnly %}
					<div class="text-center m-5">
						<a href="{{ path('app_account_statut')}}" class="btn btn-outline-primary btn-lg px-4 me-md-2">Devenir chauffeur</a>
						<p class="mt-3 text-muted">En devenant chauffeur, vous pourrez ajouter un véhicule et proposer vos trajets à la communauté EcoRide !</p>
					</div>
				{% endif %}


				<div class="col-6 col-md-4 mb-4">
					<div class="card h-100 border-0 shadow hover-animate {{ isPassengerOnly ? 'opacity-50' }}">
						<div class="card-body">
							<div class="icon-rounded bg-secondary-light mb-3">
								<i class="fa-solid fa-road"></i>
							</div>
							<h5 class="card-title mb-3">
								{% if not isPassengerOnly %}
									<a class="text-decoration-none text-dark stretched-link" href="{{ path ('app_trajet_account') }}">Mes trajets</a>
								{% else %}
									<a class="text-decoration-none text-dark stretched-link" href="#">Mes trajets</a>
								{% endif %}
							</h5>
							<p class="text-muted card-text text-sm">Visualiser vos trajets passés et à venir</p>
						</div>
					</div>
				</div>

				<div class="col-6 col-md-4 mb-4">
					<div class="card h-100 border-0 shadow hover-animate {{ isPassengerOnly ? 'opacity-50' }}">
						<div class="card-body">
							<div class="icon-rounded bg-secondary-light mb-3">
								<i class="fa-solid fa-car-side"></i>
							</div>
							<h5 class="card-title mb-3">
								{% if not isPassengerOnly %}
									<a class="text-decoration-none text-dark stretched-link" href="{{ path ('app_vehicule_account') }}">Mes véhicules</a>
								{% else %}
									<a class="text-decoration-none text-dark stretched-link" href="#">Mes véhicules</a>
								{% endif %}
							</h5>
							<p class="text-muted card-text text-sm">Modifier vos véhicules</p>
						</div>
					</div>
				</div>

				<div class="col-6 col-md-4 mb-4">
					<div class="card h-100 border-0 shadow hover-animate {{ isPassengerOnly ? 'opacity-50' }}">
						<div class="card-body">
							<div class="icon-rounded bg-secondary-light mb-3">
								<i class="fa-solid fa-comments"></i>
							</div>
							<h5 class="card-title mb-3">
								{% if not isPassengerOnly %}
									<a class="text-decoration-none text-dark stretched-link" href="{{ path ('app_avis_account') }}">Mes avis</a>
								{% else %}
									<a class="text-decoration-none text-dark stretched-link" href="#">Mes Avis</a>
								{% endif %}
							</h5>
							<p class="text-muted card-text text-sm">Consulter les avis que vous avez reçu</p>
						</div>
					</div>
				</div>

			</div>

		</div>
	</section>
{% endblock %}
