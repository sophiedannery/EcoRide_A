{# templates/account/trajet_new.html.twig #}
{% extends 'base.html.twig' %}
{% block title %}Créer un trajet
{% endblock %}

{% block body %}
	<div class="container py-5">
		<h1>Nouvel itinéraire</h1>

		{{ form_start(form) }}
		{{ form_row(form.adresseDepart) }}
		{{ form_row(form.adresseArrivee) }}
		{{ form_row(form.dateDepart) }}
		{{ form_row(form.dateArrivee) }}
		{{ form_row(form.prix) }}

		{{ form_row(form.vehicule) }}
		<p>
			Pas encore de véhicule ?
			<a href="{{ path('app_account_vehicule_new') }}">Ajoutez-en un ici</a>.
		</p>

		<button class="btn btn-primary">Enregistrer ce trajet</button>
		<a href="{{ path('app_account') }}" class="btn btn-secondary">Annuler</a>
		{{ form_end(form) }}
	</div>
{% endblock %}
